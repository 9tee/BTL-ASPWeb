@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/styles/payment.css">
<link rel="stylesheet" href="~/Content/bootstrap-4.4.1-dist/css/bootstrap.css">

<div class="content-wrapper">
    <p class="h4 text-header">CHỌN ĐỊA CHỈ MUA HÀNG</p>
    <div class="default-info border">
        <p class="user-name" id="name">Nguyễn Sơn Nam</p>
        <p class="user-info" id="address">Địa chỉ:Số 6 Hồ tùng mậu</p>
        <p class="user-info" id="mail">Email:Nampro@gmail.com</p>
        <p class="user-info" id="phone">SĐT:0978001234</p>
        <div class="action">
            <input type="button" class="btn btn-primary btn-sm" value="Giao hàng đến địa chỉ này" onclick="" />
            <input type="button" class="btn btn-light btn-sm" value="Sửa" onclick="changeAddress()" />
        </div>
    </div>
    <p class="default-info">Không phải địa chỉ này ? <a href="javascript:show();">Giao hàng đến địa chỉ khác</a></p>
    <div class="info">
        <div class="form">
            <div class="input">
                <label for="name">Họ tên:</label><input type="text" class="form-control" name="name">
                <label for="phone">SĐT:</label><input type="number" class="form-control" name="phone">
                <label for="mail">Email:</label><input type="text" class="form-control" name="mail">
                <label for="address">Địa chỉ:</label><textarea class="form-control" name="address"></textarea>
                <span>Loại địa chỉ:</span>
                <div>
                    <div class="form-check form-check-inline" onclick="select(this)">
                        <input type="radio" class="form-check-input" value="house" name="addressType"><label class="form-check-label" for="house">Nhà riêng</label>
                    </div>
                    <div class="form-check form-check-inline" onclick="select(this)">
                        <input type="radio" class="form-check-input" value="company" name="addressType"><label class="form-check-label" for="company">Công ty</label>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <input type="button" class="btn btn-primary" value="Xác nhận" style="margin-top:20px;">
            </div>
        </div>
    </div>
</div>
<script>
    function show() {
        document.querySelector('.info').style.display = 'block';
        document.getElementsByName('name')[0].value = "";
        document.getElementsByName('phone')[0].value = "";
        document.getElementsByName('mail')[0].value = "";
        document.getElementsByName('address')[0].value = "";
    }
    function changeAddress() {
        document.querySelector('.info').style.display = 'block';
        document.getElementsByName('name')[0].value = document.getElementById("name").innerText;
        document.getElementsByName('phone')[0].value = document.getElementById("phone").innerText.substring(4);
        document.getElementsByName('mail')[0].value = document.getElementById("mail").innerText.substring(6);
        document.getElementsByName('address')[0].value = document.getElementById("address").innerText.substring(8);
    }
    function select(e) {
        e.childNodes[1].checked = true;
    }
</script>