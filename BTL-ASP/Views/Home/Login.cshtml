
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/styles/login.css">
    <link rel="stylesheet" href="~/Content/bootstrap-4.4.1-dist/css/bootstrap.min.css">
    <title>Login</title>
</head>

<body>
    <div class="container">
        <span class="text">Login</span>
        <div class="col-md-3 col-md-offset-4">
            <div class="login-form">
                <form action="/Home/Login" method="post">
                    <div class="form-group">
                        <input name="Id" class="form-control" value="" placeholder="Email" id="Id" type="text">
                    </div>
                    <div class="form-group">
                        <input name="Password" class="form-control" value="" placeholder="Password" id="password" type="password">
                    </div>
                    <br> <input type="submit" class="btn btn-info" value="Login" />
                    <br>
                    <br>
                    <br>
                    <div class="checkbox">
                        <label><input type="checkbox" name="hold" value="true"> Keep me logged in </label>
                    </div>
                    <br> <a href="@Url.Action("ForgotPassword","Home")"><small>Forgot password</small></a>
                    <br>
                    <br>
                    <br>
                    <br>
                    <div>
                        <small style="color: white;">Do not have an account?</small> <a href="@Url.Action("SignUp","Home")"><small>Create Account</small></a>
                    </div>
                </form>
</div>
        </div>
    </div>
</body>
</html>
